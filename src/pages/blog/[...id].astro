---
import Layout from '../../layouts/Layout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { id: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);

const dateStr = post.data.date instanceof Date
  ? post.data.date.toISOString()
  : new Date(post.data.date).toISOString();

const formattedDate = post.data.date instanceof Date
  ? post.data.date.toLocaleDateString('ko-KR', { year: 'numeric', month: 'long', day: 'numeric' })
  : new Date(post.data.date).toLocaleDateString('ko-KR', { year: 'numeric', month: 'long', day: 'numeric' });
---

<Layout
  title={post.data.title}
  description={post.data.description}
  image={post.data.image || '/og-default.png'}
  type="article"
  publishedDate={dateStr}
  tags={post.data.tags || []}
  category={post.data.category || ''}
>
  <article class="max-w-3xl mx-auto px-4 py-12">
    <nav class="text-sm text-gray-500 mb-6" aria-label="breadcrumb">
      <ol class="flex items-center gap-1">
        <li><a href="/" class="hover:text-blue-600">홈</a></li>
        <li class="before:content-['/'] before:mx-1"><a href="/blog" class="hover:text-blue-600">블로그</a></li>
        <li class="before:content-['/'] before:mx-1 text-gray-900 font-medium truncate max-w-[200px]">{post.data.title}</li>
      </ol>
    </nav>

    <header class="mb-8">
      {post.data.category && (
        <span class="inline-block bg-blue-100 text-blue-700 text-xs font-semibold px-3 py-1 rounded-full mb-4">
          {post.data.category}
        </span>
      )}
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 leading-tight mb-4">
        {post.data.title}
      </h1>
      <p class="text-gray-600 text-lg mb-4">{post.data.description}</p>
      <div class="flex items-center gap-4 text-sm text-gray-500">
        <time datetime={dateStr}>{formattedDate}</time>
        {post.data.tags && post.data.tags.length > 0 && (
          <div class="flex gap-2 flex-wrap">
            {post.data.tags.map((tag: string) => (
              <span class="bg-gray-100 text-gray-600 px-2 py-0.5 rounded text-xs">#{tag}</span>
            ))}
          </div>
        )}
      </div>
    </header>

    {post.data.image && (
      <img
        src={post.data.image}
        alt={post.data.title}
        class="w-full rounded-xl mb-8 aspect-video object-cover"
        width="768"
        height="432"
        loading="eager"
      />
    )}

    <div class="prose prose-lg max-w-none prose-headings:text-gray-900 prose-a:text-blue-600 prose-img:rounded-xl">
      <Content />
    </div>

    <div class="mt-12 pt-8 border-t border-gray-200">
      <a href="/blog" class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium">
        ← 블로그 목록으로
      </a>
    </div>
  </article>
</Layout>
