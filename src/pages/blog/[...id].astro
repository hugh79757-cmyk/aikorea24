---
import Layout from '../../layouts/Layout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { id: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---
<Layout title={post.data.title}>
  <article class="max-w-3xl mx-auto px-4 py-12">
    <div class="mb-8">
      <a href="/blog" class="text-primary text-sm hover:underline">&larr; 블로그로 돌아가기</a>
    </div>
    <div class="flex items-center gap-2 mb-4">
      <span class="text-xs bg-blue-100 text-primary px-2 py-1 rounded">{post.data.category}</span>
      <span class="text-xs text-gray-400">{post.data.date.toLocaleDateString('ko-KR')}</span>
    </div>
    <h1 class="text-3xl md:text-4xl font-bold mb-4">{post.data.title}</h1>
    <p class="text-gray-500 text-lg mb-8">{post.data.description}</p>
    <div class="flex gap-2 mb-8 flex-wrap">
      {post.data.tags.map((tag: string) => (
        <span class="text-sm bg-gray-100 text-gray-600 px-3 py-1 rounded-full">#{tag}</span>
      ))}
    </div>
    <hr class="mb-8" />
    <div class="prose prose-lg max-w-none">
      <Content />
    </div>
    <hr class="mt-12 mb-8" />
    <div class="text-center">
      <a href="/blog" class="text-primary font-semibold hover:underline">&larr; 다른 글 보기</a>
    </div>
  </article>
</Layout>
