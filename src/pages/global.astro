import Layout from '../layouts/Layout.astro';

let globalList: any[] = [];
try {
  const runtime = (Astro.locals as any).runtime;
  const db = runtime?.env?.DB;
  if (db) {
    const result = await db.prepare(
      `SELECT id, title, link, description, source, category, pub_date, original_title, country
       FROM news WHERE category = 'global' AND title != original_title
       ORDER BY created_at DESC LIMIT 50`
    ).all();
    globalList = result.results || [];
  }
} catch (e) {
  console.error('Global news fetch error:', e);
}

